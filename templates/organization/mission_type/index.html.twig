{% extends 'organization/base.html.twig' %}

{% block title %}{{ 'organization.missionType.mainTitle' | trans }}{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('delete-item-modal') }}
{% endblock %}

{% block body %}
    <h1>{{ 'organization.missionType.mainTitle' | trans }}</h1>

    <div class="row">
        <div class="col-12 text-right mb-2">
            <a class="btn btn-success" href="{{ path('app_organization_mission_type_new') }}" role="button">{{ 'organization.missionType.addNew' | trans }}</a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table">
            <thead class="thead-light">
            <tr>
                <th>{{ 'common.name' | trans }}</th>
                <th>{{ 'common.actions' | trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for mission_type in mission_types %}
                <tr>
                    <td>{{ mission_type.name }}</td>
                    <td>
                        <a class="btn btn-secondary" href="{{ path('app_organization_mission_type_edit', {'id': mission_type.id}) }}">{{ 'action.edit' | trans }}</a>
                        <a class="btn btn-outline-danger trigger-delete" data-display-name="{{ mission_type.name }}" href="#" data-href="{{ path('app_organization_mission_type_delete', { id: mission_type.id }) }}">{{ 'action.delete' | trans }}</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">{{ 'message.noAvailableData' | trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {% include 'organization/_delete_modal.html.twig' %}
{% endblock %}
